<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Text2Activity"
    android:weightSum="5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        android:layout_weight="1.3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvtxt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Text1"
            android:background="@android:color/darker_gray"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvtxt2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Text2"
            android:background="@android:color/holo_blue_bright"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#050505"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvtxt3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Text3"
            android:background="@android:color/holo_green_light"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvtxt4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Text4"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#050505"
            android:textStyle="bold"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="Suspicious0dp">

        <Button
            android:id="@+id/bbutton1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:text="Button1"
            android:textAllCaps="false"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvtxt5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Text5"
            android:background="@android:color/holo_green_light"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#050505"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvtxt6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Text6"
            android:background="@android:color/holo_orange_light"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvtxt7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Text7"
            android:background="@android:color/holo_green_light"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#050505"
            android:textStyle="bold"
            android:textSize="25sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="Suspicious0dp">

            <Button
                android:id="@+id/bbutton2"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:text="Button2"
                android:textAllCaps="false"
                android:textSize="25sp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        android:layout_weight="1.2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvtxt8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Text8"
            android:background="@android:color/darker_gray"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvtxt9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Text9"
            android:background="@android:color/holo_blue_bright"
